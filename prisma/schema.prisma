generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Project {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  // relation one-one
  author   User   @relation(name: "Author", fields: [authorId], references: [id])
  authorId String @unique @db.ObjectId

  // relation many-many in mongodb
  contributors   User[]   @relation(name: "Contributors", fields: [contributorIDs], references: [id])
  contributorIDs String[] @db.ObjectId

  createdAt    DateTime @default(now()) @db.Date
  customer     String
  deliveryDate DateTime @default(now()) @db.Date
  description  String
  name         String
  tasks        Task[]
  updatedAt    DateTime @default(now()) @db.Date

  @@map("projects")
}

model Task {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt    DateTime @default(now()) @db.Date
  deliveryDate String
  description  String
  name         String
  priority     String
  // relation many-one
  project      Project  @relation(fields: [projectId], references: [id])
  projectId    String   @db.ObjectId
  state        Boolean  @default(false)
  updatedAt    DateTime @default(now()) @db.Date()

  @@map("tasks")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  email     String   @unique()
  isconfirm Boolean  @default(false)
  name      String
  password  String
  token     String
  updatedAt DateTime @default(now())

  // relation one-one
  ownProject Project? @relation(name: "Author")

  // relation many-many in mongodb
  contributorProjects Project[] @relation(name: "Contributors", fields: [contributorIDs], references: [id])
  contributorIDs      String[]  @db.ObjectId

  @@map("users")
}
